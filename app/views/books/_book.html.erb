<%= form_with model:book do |f| %>
  <div class="form-title row">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "form-control col-xs-12" %>
  </div>

  <div class="form-body row">
  	<%= f.label :Body %>
    <%= f.text_area :body, class: "form-control col-xs-12" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-success col-xs-12" %>
  </div>
<% end %>