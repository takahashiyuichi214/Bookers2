<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c25d5dc5a9.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header> 
      <nav class="navbar nabvbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-band" href="/">
            <span class="title">Bookers</span>
          </a>

            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to user_path(current_user.id),class:"btn btn-link" do %>
                    <span class="fas fa-home nav-link text-light"::before> Home</span>
                  <% end %>
                </li>
                
                <li class="">
                  <%= link_to users_path,class:"btn btn-link" do %>
                    <span class="fas fa-users nav-link text-light"::before>Users</span>
                  <% end %>
                </li>
                
                <li class="">
                  <%= link_to books_path,class:"btn btn-link" do %>
                    <span class="fas fa-book-open nav-link text-light"::before>Books</span>
                  <% end %>
                </li>       
                
                <li class="">
                  <%= link_to destroy_user_session_path,method: :delete ,class:"btn btn-link" do %>
                    <span class="fas fa-sign-out-alt nav-link text-light"::before>logout</span>
                  <% end %>
                </li>    
                
              <% else %>
                <li class="">
                  <%= link_to "/",class:"btn btn-link" do %>
                    <span class="fas fa-home nav-link text-light"::before="true">Home</span>
                  <% end %>
                </li>
                
                <li class="">
                  <%= link_to home_about_path,class:"btn btn-link" do %>
                    <span class="fas fa-link nav-link text-light"::before>About</span>
                  <% end %>
                </li>
                
                <li class="">
                  <%= link_to new_user_registration_path,class:"btn btn-link" do %>
                    <span class="fas fa-user-plus nav-link text-light"::before>sign up</span>
                  <% end %>
                </li>
                
                <li class="">
                  <%= link_to new_user_session_path,class:"btn btn-link" do %>
                    <span class="fas fa-sign-in-alt nav-link text-light"::before>Login</span>
                  <% end %>
                </li>              
              <% end %>
            </ul>

        </div>
      </nav>
    </header>
    <div class="body">
      <p class="notice"><%= notice %></p>

      <%= yield %>


        <footer>
          <div class="container mt-5">
            <div class="row">
              <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>