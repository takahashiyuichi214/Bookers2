<div clss="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_for(@user) do |f| %>
      <%= render 'books/error', model: @user %>
        <div class="form-group">
          <div class="user-name">Name</div>
            <%= f.text_field :name ,class:"form-control name" %>          
        </div>
        <div class="form-group">
          <div class="user-edit-image">Image</div>
            <%= f.attachment_field :profile_image ,class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <div class="form-body">Introduction</div>
            <%= f.text_area :introduction ,class:"form-control introduction" %><br>          
        </div>
        <div class="form-group">
            <%= f.submit "Update User", class:"btn btn-secondary" do%>
            <% end %>
        </div>
      <% end %>      
      
    </div>
    
  </div>
  
</div>






